<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Light" >
        <item name="android:windowNoTitle">true</item>
        <!-- 设置activity切换动画 --> 
        <item name="android:windowAnimationStyle">@style/actAnimation</item>
    </style>
	<style name="actAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:taskCloseExitAnimation">@anim/push_right_out</item>
    </style>
    <style name="actAnimation2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>
    </style>
    <style name="pullUpAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_2_enter_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_2_enter_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_2_enter_in</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_2_enter_out</item>
    </style>
    
	<style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="RecommandationCommodityName">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RecommandationShopName">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/find_list_middlesize_text_color</item>
    </style>
     <style name="RecommandationVote">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/find_list_vote_text_color</item>
    </style>
    	<style name="Custom_RO_RatingBar">
		<item name="android:maxHeight">14.0dip</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
		<item name="android:progressDrawable">@drawable/ratingbar_small</item>
		<item name="android:minHeight">14.0dip</item>
		<item name="android:thumb">@null</item>
	</style>
	<style name="Custom_RatingBar" parent="@style/Custom_RO_RatingBar">
		<item name="android:isIndicator">true</item>
	</style>
	<style name="PopItemText">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/list_item_background_color</item>
    </style>
    <style name="listietm_common_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listitem_common_title_color</item>
    </style>
    <style name="listietm_common_subtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listitem_common_subtitle_color</item>
    </style>
    <style name="listietm_common_detail" parent="@android:style/TextAppearance">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listitem_common_detail_color</item>
    </style>
    <style name="listietm_common_discount" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listitem_common_discount_color</item>
    </style>
    <style name="listietm_discount_detail" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/listitem_discount_detail_color</item>
    </style>
    <style name="popwin_anim_style">  
     	<item name="android:windowEnterAnimation">@anim/fade_in</item>
     	<item name="android:windowExitAnimation">@anim/fade_out</item>
	</style>
	<style name="Translucent_Dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">#00000000</item>
		<item name="android:windowBackground">@drawable/bg_transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
	</style>
	<style name="MMEditText">
        <item name="android:textSize">16dip</item>
        <item name="android:textColorHint">#ff888888</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_chat_edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">43.0dip</item>
        <item name="android:singleLine">true</item>
    </style>  
        <!-- ListView样式 -->
    <style name="MListView">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/list_divder_color</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:listSelector">@drawable/bg_transparent</item>
        <item name="android:background">@drawable/bg_transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:focusable">true</item>
    </style>
</resources>